{{ 'custom-gallery.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .gap {
    gap: {{ section.settings.media_border_thickness }}
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="container section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <div class="row">
        <div class="col-12">
          <h2 class="my-4 text-center {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
        </div>
      </div>
      {%- endif -%}
    {% if section.settings.sub_heading != blank %}
      <div class="row">
        <div class="col-12">
          <h3 class="mb-4 text-center">{{ section.settings.sub_heading }}</h3>
        </div>
      </div>
    {% endif %}
  
    <div class="gallery d-flex flex-wrap justify-content-center gap-{{ section.settings.media_border_thickness }}">
      {% for block in section.blocks %}
        {%- liquid
           if forloop.index == 1
            assign column_size = 'col-12 col-md-3' 
           elsif forloop.index == 2
            assign column_size = 'col-12 col-md-4' 
           elsif forloop.index == 3
            assign column_size = 'col-12 col-md-3' 
           elsif forloop.index == 4
            assign column_size = 'col-12 col-md-6' 
           elsif forloop.index == 5
            assign column_size = 'col-12 col-md-4' 
           elsif forloop.index == 6
            assign column_size = 'col-12 col-md-4' 
           elsif forloop.index == 7
            assign column_size = 'col-12 col-md-6' 
           else
            assign column_size = 'col-12 col-md-auto' 
           endif
        -%}
        <div class="gallery__column gallery__column--mobile-equalizer {{ column_size }}">
          {% if block.settings.image == blank %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
          {% else %}
            <a class="gallery__link w-100 h-100" href="{% if block.settings.link != blank %} {{ block.settings.link }} {% endif %}">
              <div class="position-relative h-100">
                {% render 'responsive-image' with block.settings.image, alt: block.settings.image.alt class: 'gallery__image d-block w-100 h-100' %}
                <div class="gallery__caption">
                  <h4 class="gallery__caption--title">{{ block.settings.title }}</h4>
                  <p class="gallery__caption--description">{{ block.settings.description }}</p>
                </div>
              </div>
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": {
    "en": "Designers Gallery"
  },
  "class": "custom-section--designers-gallery",
  "max_blocks": 7,
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "header",
      "content": "Headings"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": {
        "en": "Heading Text"
      },
      "default": "Heading Text"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": {
        "en": "Sub Heading Text"
      },
      "default": "Sub-heading Text"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "t:settings_schema.global.settings.header__border.content"
    },
    {
      "type": "range",
      "id": "media_border_thickness",
      "min": 0,
      "max": 5,
      "step": 1,
      "unit": "rem",
      "label": "t:settings_schema.global.settings.thickness.label",
      "default": 1
    }
  ],
  "blocks": [
    {
      "name": "Image",
      "type": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": {
            "en": "Image"
          },
          "info": {
            "en": "1000 x 525px recommended"
          }
        },
        {
          "type": "url",
          "id": "link",
          "label": {
            "en": "Link"
          },
          "info": {
            "en": "Optional"
          }
        },
        {
          "type": "text",
          "id": "title",
          "label": {
            "en": "Heading"
          },
          "info": {
            "en": "Optional"
          }
        },
        {
          "type": "textarea",
          "id": "description",
          "label": {
            "en": "Description"
          },
          "info": {
            "en": "Optional"
          }
        }
      ]
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Designers Gallery"
      },
      "category": {
        "en": "Image"
      },
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}